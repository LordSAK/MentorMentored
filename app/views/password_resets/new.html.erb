<h1 style="color:gray;" align="center">Password Assistance</h1>
<%= form_tag password_resets_path, :method => :post do %>
<table>
<tr>
<td align="center">
<%= label_tag :name, "Enter the email address associated with your account, then click Send. We'll email you a link to a site where you can reset your password.", :style => "color:gray;" %>
</td>
</tr>
<tr>
<td align="center">
    <%= text_field_tag :email, params[:email] %>
    <%= submit_tag "Send", :style => "width:100px; height:35px; color:white; background-color:Black; border-style: none; font-size:medium;" %>
</td>
</tr>
</table>

<% end %>


