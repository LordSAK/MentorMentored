<h2 class="subtitle">
   Profession
</h2>
<%= form_for(:Professions) do |f| %>
<table width = "100%">
      <tr style = "text-align:center;">
         <td>
			<%= f.text_field :tf_Designation, placeholder: "Designation" %>
			at
			<%= f.text_field :tf_Company, placeholder: "Company" %>
         </td>
      </tr>
      <tr style = "text-align:center;">
         <td  style="margin-right:60px;">
            From
            <%= f.select :fromyear, (1995..Time.now.year).to_a, :include_blank => {:year => "Select year"} %>
            to
            <%= f.select :toyear, (1995..Time.now.year).to_a, :include_blank => {:year => "Select year"} %>
         </td>
      </tr>
</table>
<table width="92%">
       <td align="center">
         	<div class="button" style="margin-left:60px;">
                <%= f.submit "Next", { :class => "buttonSearch"} %>
            </div>
         </td>
      </tr>
</table>
<% end %> 