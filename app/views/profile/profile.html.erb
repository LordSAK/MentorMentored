<%= form_for :profile, :url => { :method => :get, :action => :profile } do |f| %>

<table align="center" width="85%" style=" margin-top: 30px; margin-left:55px; margin-bottom:30px">
    <tr>
        <td width="40%" style="background-color: #FFFFFF;font-size: large" class="style1" ForeColor="Gray">
        
        <%= f.label(:name, @user.First_Name + " " + @user.Last_Name, :style => "color:Gray;")  %>
        
        </td>
        <td width="60%" style="background-color:#00BFFF;font-size: large">
            <% @user_education.each do |user_edu| %>
            <table style="color:white;">
                <tr>
                    <td>
	                    <%= f.label(:schoolname, user_edu.SchoolName) %>
                    </td>
                    <td>
                        <%= f.label(:schoolfrom, user_edu.SchoolFrom) %>
                    </td>
                </tr>
            </table>	
            <% end %>
        </td>
    </tr>
    <tr>
        <td width="40%" style="background-color: #FFFFFF;font-size: large" class="style1">
	        <% @user_communication.each do |user_com| %>
            <% if user_com.Private? == "1" %>
            <table style="color:Gray;">
                <tr>
	                <td>
	                	<%= f.label(:CommunicationMode, user_com.CommunicationMode ) %>
	                </td>
	                <td>
	                	:<%= f.label(:CommunicationDetail, user_com.CommunicationDetail ) %>
	                </td>
                </tr>
            </table>
            <% else %>
            <table style="color:Gray;">
                <tr>
                    <td>
                        
                    </td>
                    <td>
                        
                    </td>
                </tr>
            </table>
            <% end %>
            <% end %>
        </td>
        <td width="60%" style="background-color:#00BFFF;font-size: large">
            <% @user_profession.each do |user_pro| %>
            <table style="color:white;">
                <tr>
                    <td>
                    	<%= f.label(:Designation, user_pro.Designation) %>
                    </td>
                    
                    <td>
                    at  <%= f.label(:Company, user_pro.Company) %>
                    </td>
                </tr> 
            </table>
            <% end %> 
        </td>
    </tr>
    <tr>
        <td width="40%" style="background-color: #FFFFFF;font-size: large" class="style1">
            <%= f.label(:Availability) %>:
            <% @user_availability.each do |user_avail| %>
            <table style="color:Gray;">
                <tr>
                    <td>
                    	<%= f.label(:userdays, user_avail.UserDays) %>
                    </td>
                    <td>
                        <%= f.label(:timefrom, user_avail.TimeFrom) %> to
                    </td>
                    <td>
                        <%= f.label(:timeto, user_avail.TimeTo) %>
                    </td>
                </tr> 
            </table>
            <% end %>
            <br/>
            About:      <%= f.label(:about, @user.First_Name + " " + @user.Last_Name, :style => "color:Gray;") %>
        </td>
        <td width="60%" style="background-color:#00BFFF;font-size: large">
            <table style="color:white;">
                <tr>
                    <td>
                        <% if !@user.user_City.nil? %>
                        <%= f.label(:city, @user.user_City) %>
                        <% else %>
                        
                        <% end %>
                    </td>
                    <td>
                        <% if !@user.user_State.nil? %>
                        <%= f.label(:state, @user.user_State) %>
                        <% else %>
                        
                        <% end %>
                    </td>
                    <td>
                        <% if !@user.user_Zip.nil? %>
                        <%= f.label(:zip, @user.user_Zip) %>
                        <% else %>
                        
                        <% end %>
                    </td>
                </tr> 
            </table>
        </td>
    </tr>
</table>
<table width="25%" align="center" style="margin-left:240px" >
<tr>
        <td>
            <div class="button">
                    <%= link_to "Back", :back, { :class => "buttonBack"} %>
            </div>
        </td>
    </tr>
</table>
<% end %>